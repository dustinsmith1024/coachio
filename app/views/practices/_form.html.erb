<%= form_for([@team, @workout, @practice]) do |f| %>
  <% if @practice.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@practice.errors.count, "error") %> prohibited this practice from being saved:</h2>

      <ul>
      <% @practice.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :scheduled_date %><br />
    <%= f.date_select :scheduled_date %>
  </div>
  <div class="field">
    <%= f.label :scheduled_time %><br />
    <%= f.time_select :scheduled_time %>
  </div>
	<% unless @workout.group %>
  <div class="field">
    <%= f.label :member %><br />
		<%= f.select :member_id, @team.members.collect {|w| [w.name, w.id]} %>
  </div>
	<% end %>
  <div class="field">
    <%= f.label :track_results %><br />
    <%= f.check_box :track_results %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
