<h1>Listing members</h1>

<%= link_to 'Team', team_path(@team) %>

<table>
  <tr>
    <th>#</th>
    <th>Name</th>
    <th>Player</th>
    <th>Position</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @members.each do |member| %>
  <tr>
    <td><%= member.number %></td>
    <td><%= member.name %></td>
    <td><%= member.player %></td>
    <td><%= member.position %></td>
    <td><%= link_to 'Show', team_member_path(@team, member) %></td>
    <td><%= link_to 'Edit', edit_team_member_path(@team, member) %></td>
    <td><%= link_to 'Destroy', team_member_path(@team, member), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New member', new_team_member_path(@team) %>
