<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @member.name %>
</p>

<p>
  <b>Player:</b>
  <%= @member.player %>
</p>

<p>
  <b>Position:</b>
  <%= @member.position %>
</p>

